@model Chef

<div>
    <div class="text-center">
        <h1>Add a Chef!</h1>
        <a href="/">Home</a>
    </div>
    <div>
        <form asp-action="addChef" asp-controller="Home" method="post">
            <div class="form-group">
                <span asp-validation-for="FirstName"></span><br>
                <label asp-for="FirstName"></label>
                <input class="form-control" asp-for="FirstName"><br>
                <small class="form-text text-muted">Must be at least 2 characters.</small>
            </div>
            <div class="form-group">
                <span asp-validation-for="LastName"></span><br>
                <label asp-for="LastName"></label>
                <input class="form-control" asp-for="LastName"><br>
                <small class="form-text text-muted">Must be at least 2 characters.</small>
            </div>
            <div class="form-group">
                <span asp-validation-for="Birthday"></span><br>
                <label asp-for="Birthday"></label>
                <input class="form-control" asp-for="Birthday"><br>
                <small class="form-text text-muted">Must be 18 or older.</small>
            </div>
            <button class="btn btn-primary">Add Chef</button>
        </form>
    </div>
</div>