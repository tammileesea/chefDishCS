@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div>
        <p>Chefs | <a href="/dishes">Dishes</a></p>
        <a href="/new">Add a Chef</a>
        <h1>Check out our roster of chefs!</h1>
        <hr>
    </div>
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Age</th>
                <th scope="col"># of Dishes</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var chef in ViewBag.chefs){
                <tr>
                    <td>@chef.FirstName @chef.LastName</td>
                    <td>@chef.Age</td>
                    <td>@chef.Dishes.Count</td>
                </tr>
            }
        </tbody>
    </table>
</div>
